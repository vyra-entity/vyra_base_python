{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/function.schema.json",
    "title": "Function List Schema",
    "description": "Schema f√ºr eine Liste von Funktionsdefinitionen.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "function_name": { 
                "type": "string" 
            },
            "displayname": {
                "type": "string",
                "additionalProperties": false
            },
            "params": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                    "datatype": { 
                        "type": "string" 
                    },
                    "displayname": {
                        "type": "string"
                    },
                    "description": { 
                        "type": "string" 
                    },
                    "optional": { 
                        "type": "boolean",
                        "default": false
                    }
                    },
                    "required": ["datatype", "displayname", "description", "optional"],
                    "additionalProperties": false
                }
            },
            "return": {
                "type": "object",
                "properties": {
                    "datatype": { 
                        "type": "string" 
                    },
                    "displayname": {
                        "type": "string"
                    },
                    "description": { 
                        "type": "string" 
                    },
                    "additionalProperties": false
                },
                "required": ["datatype", "displayname", "description"],
                "additionalProperties": false
            },
            "description": { "type": "string" },
            "display_style": {
                "type": "object",
                "properties": {
                    "visible": { 
                        "type": "boolean" 
                    },
                    "published": { 
                        "type": "boolean" 
                    }
                },
                "additionalProperties": false
            },
            "additionalProperties": false
        }
    },
    "required": [
        "function_name",
        "displayname",
        "params",
        "return",
        "description",
        "visible",
        "published"
    ],
    "additionalProperties": false
}
